<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:background="@drawable/img_item_placeholder"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:id="@+id/detailData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/radius_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_item_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="BT01"
                    style="@style/TexViewFont" />

                <LinearLayout
                    android:id="@+id/linear_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text=" (stock:"
                        style="@style/TexViewFont" />

                    <TextView
                        android:id="@+id/txt_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="18"
                        style="@style/TexViewFont" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text=")"
                        style="@style/TexViewFont" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Blesstea Bellesha Body Shower Pink with Camellia"
                    style="@style/TexViewFont" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/red"
                    android:text="Rp. "
                    style="@style/TexViewFont" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/red"
                    android:text="1.200.000"
                    style="@style/TexViewFont" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_pv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/black"
                    android:text="123"
                    style="@style/TexViewFont" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/black"
                    android:text="pv"
                    style="@style/TexViewFont" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_marginBottom="@dimen/radius_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_minus"
                    android:background="@drawable/ic_minus_circle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_qty"
                        style="@style/Font_family_light"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:inputType="numberDecimal"
                        android:text="0"
                        android:textAlignment="center"
                        android:maxLines="1"
                        android:maxLength="5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:focusableInTouchMode="true"
                        android:focusable="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/radius_2"
                        android:layout_marginBottom="@dimen/radius_2"
                        android:background="@color/colorPrimaryDark" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_plus"
                    android:background="@drawable/ic_plus_circle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>