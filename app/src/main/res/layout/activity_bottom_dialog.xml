<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="18dp"
            android:id="@+id/linearBackground"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/radius_8"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/vendor_image"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:layout_margin="@dimen/radius_16"
                android:paddingTop="@dimen/radius_16">

                <LinearLayout
                    android:id="@+id/imgChilds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/message"
                        style="@style/Font_family_light"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14"
                        android:lineSpacingExtra="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warning loren ipsum" />

                    <TextView
                        android:id="@+id/close"
                        style="@style/Font_family_light"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_13"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/radius_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUTUP" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>