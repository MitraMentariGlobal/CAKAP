<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relative_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_unread"
            android:background="@drawable/circle_green"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/radius_2"
            android:layout_marginEnd="@dimen/padding_4"
            android:layout_width="6dp"
            android:layout_height="6dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_13"
                android:textColor="@color/black"
                style="@style/TexViewFont" />

            <TextView
                android:id="@+id/txt_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_13"
                android:textColor="@color/black"
                style="@style/TexViewFont" />

            <TextView
                android:id="@+id/txt_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_13"
                android:textColor="@color/black"
                style="@style/TexViewFont" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>