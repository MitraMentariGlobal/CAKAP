<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?android:attr/actionBarSize"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/main_progress_bar"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/running_text"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    style="@style/TexViewFont"
                    tools:ignore="EllipsizeMaxLines"/>

                <co.id.cakap.utils.widget.CustomRecyclerViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:itemMargin="15dp"/>

                <LinearLayout
                    android:id="@+id/linear_ewallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/home_info_style"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/radius_10"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/radius_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/ewallet"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            style="@style/TexViewFont"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:gravity="center"
                                android:text="@string/idr_upper"
                                android:textSize="8sp"
                                style="@style/TexViewFont"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginStart="5dp"
                                android:maxLines="1"
                                android:text="100.000.000"
                                android:textSize="14sp"
                                style="@style/TexViewFont"/>

                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/radius_10"
                        android:layout_marginEnd="@dimen/radius_10"
                        android:background="#c9c9c9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:text="1.000.000.000"
                                    style="@style/TexViewFont" />

                                <TextView
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:text="@string/fee"
                                    android:textColor="@color/curated"
                                    style="@style/TexViewFont"/>
                            </LinearLayout>
                        </FrameLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#c9c9c9" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:text="1.000.000.000"
                                    style="@style/TexViewFont"/>

                                <TextView
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:text="@string/omset"
                                    android:textColor="@color/curated"
                                    style="@style/TexViewFont"/>
                            </LinearLayout>
                        </FrameLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#c9c9c9" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TexViewFont"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:text="1.000.000.000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:text="@string/total_omset"
                                    android:textColor="@color/curated"
                                    style="@style/TexViewFont"/>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/radius_10"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/radius_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_transaction"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/radius_10"
                        android:layout_marginBottom="@dimen/radius_10"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/transaction"
                        style="@style/TexViewFont"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/radius_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_registration"
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="@dimen/radius_10"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:id="@+id/relative_registration"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/cakap_registration"/>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#99808080"/>

                                    <TextView
                                        android:background="@android:color/transparent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:textSize="15sp"
                                        android:text="@string/registration"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        style="@style/TexViewFont"/>
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:id="@+id/relative_padding_transaction1"
                                android:layout_width="@dimen/radius_16"
                                android:layout_height="wrap_content"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_cashbill"
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="@dimen/radius_10"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:id="@+id/relative_cashbill"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/cakap_cashbill"/>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#99808080"/>

                                    <TextView
                                        android:background="@android:color/transparent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:textSize="15sp"
                                        android:text="@string/cashbill"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        style="@style/TexViewFont"/>
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:id="@+id/relative_padding_transaction2"
                                android:layout_width="@dimen/radius_16"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_bonus_statement"
                                android:visibility="gone"
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="@dimen/radius_10"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:id="@+id/relative_bonus_statement"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/cakap_cashbill"/>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#99808080"/>

                                    <TextView
                                        android:background="@android:color/transparent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:textSize="15sp"
                                        android:text="@string/bonus_statement"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        style="@style/TexViewFont"/>
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_inv_to_mb"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="@dimen/radius_16"
                            app:cardBackgroundColor="@color/transparent"
                            app:cardCornerRadius="@dimen/radius_10"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:id="@+id/relative_invoice_to_mb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/cakap_inv_to_mb"/>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#99808080"/>

                                <TextView
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textSize="15sp"
                                    android:text="@string/invoice_to_mb"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    style="@style/TexViewFont"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/linear_network_genealogy"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/radius_16"
                            android:layout_marginBottom="@dimen/radius_10"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_network_genealogy"
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="@dimen/radius_10"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:id="@+id/relative_network_genealogy"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/cakap_request_invoice"/>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#99808080"/>

                                    <TextView
                                        android:background="@android:color/transparent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:textSize="15sp"
                                        android:text="@string/network_genealogy"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        style="@style/TexViewFont"/>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:id="@+id/relative_padding_transaction3"
                                android:layout_width="@dimen/radius_16"
                                android:layout_height="wrap_content"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view_transaction_not_visible"
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="@dimen/radius_10"
                                app:cardElevation="0dp">
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_restock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TexViewFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="@dimen/radius_10"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="@string/restock"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/radius_10"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_req_inv_to_company"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/transparent"
                            app:cardCornerRadius="@dimen/radius_10"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:id="@+id/relative_req_inv_to_company"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/cakap_invoice"/>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#99808080"/>

                                <TextView
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:text="@string/req_invoice_to_com"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    style="@style/TexViewFont"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:id="@+id/relative_padding_restock1"
                            android:layout_width="@dimen/radius_16"
                            android:layout_height="wrap_content"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_req_inv_to_bc"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/transparent"
                            app:cardCornerRadius="@dimen/radius_10"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:id="@+id/relative_req_inv_to_bc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/cakap_request_invoice"/>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#99808080"/>

                                <TextView
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:text="@string/req_invoice_to_bc"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    style="@style/TexViewFont"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:id="@+id/relative_padding_restock2"
                            android:layout_width="@dimen/radius_16"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_restock_not_visible"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/transparent"
                            app:cardCornerRadius="@dimen/radius_10"
                            app:cardElevation="0dp">
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>