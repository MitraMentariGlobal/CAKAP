<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/radius_10"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/background_green_list_style"
        android:padding="@dimen/radius_32">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/curated"
                android:textSize="@dimen/text_16"
                style="@style/Font_family_light"
                android:text="Please enter your user id" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login_green_list_style"
                android:layout_marginTop="@dimen/radius_16">

                <EditText
                    android:id="@+id/user_id_et"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableStart="@drawable/ic_user_id"
                    android:drawableTint="@color/curated"
                    android:drawablePadding="@dimen/padding_8"
                    android:hint="@string/login_user_id"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="@dimen/padding_14"
                    android:textColor="@color/black"
                    android:textColorHint="@color/curated_light"
                    android:textSize="@dimen/text_14"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/radius_16"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/radius_24"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_submit"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/white"
                        android:text="@string/submit_upper"
                        android:textStyle="bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="@dimen/radius_16"
                        style="@style/TexViewFont" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="@dimen/radius_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/curated"
                android:textSize="@dimen/text_14"
                android:gravity="center"
                style="@style/Font_family_light"
                android:text="Untuk reset Password BC/MB, silakan hubungi admin." />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>